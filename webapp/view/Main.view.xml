<mvc:View controllerName="helloworld.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <VBox id="vboxDadosUser" class="sapUiSmallMargin">
                <Text id="txtUser" text="Olá {/user/name}!"></Text>
                <Input id="inUser" value="{/user/name}" width="250px" placeholder="Digite seu nome ..."></Input>  
            
            <Input id="inCountry"
               value="{/user/country}"
               width="250px"
               placeholder="Selecione o país..."
               showValueHelp="true"
               valueHelpRequest=".onOpenVH"/>
            </VBox>

           <List id="lstComponentes" headerText="Componentes" items="{/items}" class="sapUiSmallMarginTop" mode="SingleSelectMaster" itemPress=".onItemPress">
                <StandardListItem id="sltComponentes" title="{name}" description="{type}" icon="sap-icon://activity-items" type="Active"/>
            </List>

       <SearchField id="_IDGenSearchField" width="100%" liveChange=".onSearch" class="sapUiSmallMarginTop"/>

            <Table id="_IDGenTable1" items="{/items}" class="sapUiSmallMarginTop" inset="false">
                <headerToolbar>
                    <Toolbar id="_IDGenToolbar">
                        <Title id="_IDGenTitle" text="Tabela (sap.m.Table)"/>
                    <ToolbarSpacer id="_IDGenToolbarSpacer"/>
                    <Button id="_IDGenButton" text="Ordenar por Nome" press=".onSortName"/>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column id="_IDGenColumn"><Text id="_IDGenText" text="ID"/></Column>
                    <Column id="_IDGenColumn1"><Text id="_IDGenText1" text="Nome"/></Column>
                </columns>
                <items>
                    <ColumnListItem id="_IDGenColumnListItem">
                    <ObjectIdentifier id="_IDGenObjectIdentifier" title="{id}"/>
                    <ObjectIdentifier id="_IDGenObjectIdentifier1" title="{name}"/>
                    </ColumnListItem>
                </items>
            </Table>

   <!-- <t:Table id="_IDGenTable2" xmlns:t="sap.ui.table" rows="{/items}" class="sapUiSmallMarginTop" selectionMode="Single" > 
                <t:columns>
                    <t:Column id="_IDGenColumn2" label="ID"><t:template><Text id="_IDGenText2" text="{id}"/></t:template></t:Column>
                    <t:Column id="_IDGenColumn3" label="Nome"><t:template><Text id="_IDGenText3" text="{name}"/></t:template></t:Column>
                </t:columns>
            </t:Table> -->

             <Button id="_IDGenButton2" text="Abrir Dialog" press=".onOpenDialog" class="sapUiSmallMarginTop"/>

        </content>
    </Page>
</mvc:View>